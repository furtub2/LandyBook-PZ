@model IEnumerable<LandyBook.Models.Book>

@{
    ViewData["Title"] = "All Books";
}

<style>
    .card {
        margin-bottom: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 14px;
        margin-bottom: 20px;
    }
</style>

<div class="row">
    <div class="col-2"></div>
    <div class="text-left div__main">
        <h1 class="display-4">All Books</h1>
        <form asp-action="Create" method="get">

            <button type="submit" class="btn btn-success" role="button">Add new book</button>
        </form>
        <br />
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">@book.Author</p>
                            <h5 class="card-title">@book.Title</h5>
                            <button class="btn btn-info" disabled>Available: @book.IsAvailable</button>
                            <br />
                            <br />
                            <table>
                                <tr>
                                    <td>
                                        <form asp-action="Edit" asp-route-id="@book.ID" method="get">
                                            <button class="btn btn-warning" type="submit">Edit</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form asp-action="Delete" asp-route-id="@book.ID" method="get">
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-2"></div>
</div>