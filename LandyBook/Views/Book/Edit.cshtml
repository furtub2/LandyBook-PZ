@model LandyBook.Models.Book

@{
    ViewData["Title"] = "Edit a book";
}
<div class="div__main text-left">
    <h1>Edit</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="IsAvailable" id="isAvailableTrue" value="true" checked>
                        <label class="form-check-label" for="isAvailableTrue">
                            Available
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="IsAvailable" id="isAvailableFalse" value="false">
                        <label class="form-check-label" for="isAvailableFalse">
                            Not Available
                        </label>
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
    <br />
    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}